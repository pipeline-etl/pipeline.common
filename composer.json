{
  "name": "pipeline-etl/common",
  "description": "Pipeline.Common contains interfaces and shared classes used by various Pipeline components",
  "keywords": [ "pipeline-etl", "data import", "ETL" ],
  "homepage": "https://github.com/pipeline-etl/pipeline.common",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": ">=8.3",
    "ext-uuid": ">=1.2.0",
    "psr/log": ">=3.0",
    "lunr/ticks": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": ">=10.5 <11.0",
    "mockery/mockery": "~1.6",
    "ext-xdebug": "~3.1",
    "lunr/halo": "dev-master"
  },
  "config": {
    "optimize-autoloader": true
  },
  "autoload": {
    "psr-4": {"Pipeline\\": "src/Pipeline/"}
  }
}
